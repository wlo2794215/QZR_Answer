@model IEnumerable<Answer.Model.Answer.Emoloyee>
<script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Gender)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Birthday)
        </th>
       
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Birthday)
            </td>
            
            <td>
                @Ajax.ActionLink("Edit", "Edit", new { id = item.ID }, new AjaxOptions { UpdateTargetId = "sqldiv" },new {@class="btn btn-success" })
                @*<button class="btn btn-success" data-toggle="modal" data-target="#EditDialog">@Ajax.ActionLink("Edit", "Edit", new { id = item.ID }, new AjaxOptions { UpdateTargetId = "EditDialog" })</button>
                <button class="btn btn-success" href="/Emoloyees/Edit?id=@item.ID" data-toggle="modal" data-target="#EditDialog">Edit</button>*@
                @Ajax.ActionLink("Delete", "Delete", new { id = item.ID }, new AjaxOptions { UpdateTargetId = "sqldiv" },new {@class="btn btn-success" })
                @*<button class="btn btn-success" data-toggle="modal" data-target="#DeleteDialog">@Ajax.ActionLink("Delete", "Delete", new { id = item.ID }, new AjaxOptions { UpdateTargetId = "DeleteDialog" })</button>
                <button class="btn btn-success" href="/Emoloyees/Delete?id=@item.ID" data-toggle="modal" data-target="#DeleteDialog">Delete</button>*@
            </td>
        </tr>
    }
</table>
<div class="modal fade text-center" id="EditDialog">
    <div class="modal-dialog">
        <div class="modal-content modal-dialog-centered">
        </div>
    </div>
</div>
<div class="modal fade text-center" id="DeleteDialog">
    <div class="modal-dialog">
        <div class="modal-content modal-dialog-centered">
        </div>
    </div>
</div>